<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmAddress"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/tenedt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border_radius"
            android:hint="Họ và tên"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:textColorHint="@color/white"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/sdtedt"
            android:layout_below="@+id/tenedt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/border_radius"
            android:hint="Số điện thoại"
            android:padding="10dp"
            android:textColorHint="@color/white"
            android:textSize="24dp"/>

        <EditText
            android:id="@+id/diachiedt"
            android:layout_below="@+id/sdtedt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/border_radius"
            android:hint="Địa chỉ nhận hàng"
            android:padding="10dp"
            android:textColorHint="@color/white"
            android:textSize="24dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="200dp">

        <Button
            android:id="@+id/tieptheobtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:backgroundTint="#0E7FD8"
            android:text="Tiếp theo"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>

</LinearLayout>